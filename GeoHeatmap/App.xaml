<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoHeatmap.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Brand colors -->
            <Color x:Key="PrimaryPurple">#512CD4</Color>
            <Color x:Key="OnPrimary">#FFFFFF</Color>

            <!-- Buttons -->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="12,8" />
            </Style>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource PrimaryPurple}" />
                <Setter Property="BarTextColor" Value="{StaticResource OnPrimary}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>